@model WebCore.Models.WeatherVm

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>WeatherVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetWeather">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.WeatherRequest.City)
                @Html.TextBoxFor(m => m.WeatherRequest.City)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (Model.WeatherData != null)
{
    <div>
        <b>Description:</b> @Model.WeatherData.Description <br />
        <b>Temperature:</b> @Model.WeatherData.Temp
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
